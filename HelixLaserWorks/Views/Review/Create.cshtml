@model ReviewFormModel
@{
    ViewData["Title"] = "Post your feedback for our services!";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post">
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <div>
            <label for="star1" title="1 star">1 star</label>
            <input type="radio" id="star1" asp-for="Rating" value="1" />
        </div>
        <div>
            <label for="star2" title="2 stars">2 stars</label>
            <input type="radio" id="star2" asp-for="Rating" value="2" />
        </div>
        <div>
            <label for="star3" title="3 stars">3 stars</label>
            <input type="radio" id="star3" asp-for="Rating" value="3" />
        </div>
        <div>
            <label for="star4" title="4 stars">4 stars</label>
            <input type="radio" id="star4" asp-for="Rating" value="4" />
        </div>
        <div>
            <label for="star5" title="5 stars">5 stars</label>
            <input type="radio" id="star5" asp-for="Rating" value="5" />
        </div>

        <span asp-validation-for="Rating" class="small text-danger"></span>
    </div>

    <div class="text-center">
        <input class="btn btn-primary mt-3" type="submit" value="Post" )>
    </div>

</form>