@model IEnumerable<OfferForContactViewModel>

@{
    ViewData["Title"] = "Offers that require contact with customer";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">No offers requiering customer contact found!</h2>
}

<div class="row">
    @foreach (var offer in Model)
    {
        <div class="card" style="width: 25rem; margin-left: 5px">
            <div class="card-header">
                <p class="card-text"><span class="fw-bold">Date of Creation:</span> @offer.CreatedOn</p>
                <p class="card-text"><span class="fw-bold">Message:</span> @offer.AdminNotes</p>
                <p class="card-text"><span class="fw-bold">Calculated Price:</span> @offer.Price€</p>
                <p class="card-text"><span class="fw-bold">Expected time for parts production:</span> @offer.ProductionDays days</p>
                <p class="card-text"><span class="fw-bold">Customer Phone Number:</span> @offer.CustomerPhone</p>
                <p class="card-text"><span class="fw-bold">Customer Email:</span> @offer.CustomerEmail</p>

                    <a class="btn btn-warning" asp-controller="Offer" asp-action="Details" asp-route-offerId="@offer.Id">View Offer Details</a>

                    <form asp-area="Admin" asp-controller="Offer" asp-action="Contacted" asp-route-offerId="@offer.Id">
                    <button class="btn btn-success mt-1" type="submit">Customer Contacted</button>
                    </form>
            </div>
        </div>
    }
</div>